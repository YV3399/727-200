<PropertyList>

<!-- Baggage (Front)-->

  <model>
    <name>Baggage</name>
    <path>Aircraft/727-200/Models/Services/Baggage/baggage.xml</path>
    <condition>
      <and>
        <property>controls/switches/baggage1</property>
        <less-than>
          <property>velocities/airspeed-kt</property>
          <value>2</value>
        </less-than>
      </and>
    </condition>
    <offsets>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </model>

<!-- Baggage (Front)-->

  <model>
